{
  "name": "vibe-coder",
  "displayName": "Vibe Coder - Synesthetic Themes",
  "description": "Dynamically changes VS Code theme based on time and language vibe.",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Vibe: Morning Calm",
        "uiTheme": "vs-dark",
        "path": "./themes/morning-calm.color-theme.json"
      },
      {
        "label": "Vibe: Afternoon Focus",
        "uiTheme": "vs-dark",
        "path": "./themes/afternoon-focus.color-theme.json"
      },
      {
        "label": "Vibe: Night Owl",
        "uiTheme": "vs-dark",
        "path": "./themes/night-owl.color-theme.json"
      },
      {
        "label": "Vibe: Python Zen",
        "uiTheme": "vs-dark",
        "path": "./themes/python-zen.color-theme.json"
      },
      {
        "label": "Vibe: WebDev Flow",
        "uiTheme": "vs-dark",
        "path": "./themes/webdev-flow.color-theme.json"
      },
      {
        "label": "Vibe: Default Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/default-dark.color-theme.json"
      }
    ],
    "configuration": {
      "title": "Vibe Coder Settings",
      "properties": {
        "vibe-coder.enableTimeTrigger": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic theme switching based on time of day"
        },
        "vibe-coder.enableLanguageTrigger": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic theme switching based on file language"
        },
        "vibe-coder.updateIntervalMinutes": {
          "type": "number",
          "default": 5,
          "description": "Check interval for time trigger in minutes"
        },
        "vibe-coder.logLevel": {
          "type": "string",
          "default": "info",
          "enum": ["info", "debug", "off"],
          "description": "Logging level for the extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.13.0",
    "typescript": "^4.7.2"
  }
} 